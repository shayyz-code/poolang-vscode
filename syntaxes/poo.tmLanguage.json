{
  "name": "Poo",
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.poo",
  "fileTypes": ["poo"],
  "patterns": [
    {
      "name": "keyword.control.poo",
      "match": "\\b(poo|poof|use|if|elif|else|for|in|step|return|while|mut)\\b"
    },
    {
      "name": "keyword.operator.logical.poo",
      "match": "\\b(not|or|and)\\b"
    },
    {
      "name": "storage.type.poo",
      "match": "\\b(vec|str|float|int|bool|char|void)\\b"
    },
    {
      "name": "support.function.std.poo",
      "match": "\\b(pout|sin|cos|_f|_i|extend|fill|cls)\\b"
    },
    {
      "name": "variable.parameter.poo",
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*:)"
    },
    {
      "name": "constant.numeric.poo",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "string.quoted.double.poo",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.poo",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "string.quoted.single.poo",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.poo",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "comment.block.poo",
      "begin": "//",
      "end": "//",
      "patterns": [
        {
          "name": "comment.block.inner.poo",
          "match": "[^/]+"
        }
      ]
    },
    {
      "name": "punctuation.separator.colon.poo",
      "match": ":"
    },
    {
      "name": "keyword.operator.arithmetic.poo",
      "match": "(\\+|-|\\*|/|==|!=|<=|>=|=)"
    },
    {
      "name": "punctuation.definition.block.poo",
      "match": "\\{|\\}"
    },
    {
      "name": "meta.import.poo",
      "match": "\\b(use)\\s+[a-zA-Z0-9_]+(::[a-zA-Z0-9_]+)?\\b"
    },
    {
      "name": "meta.function-call.poo",
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
    }
  ]
}
